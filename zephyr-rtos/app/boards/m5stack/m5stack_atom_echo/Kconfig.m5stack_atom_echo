config BOARD_M5STACK_ATOM_ECHO
	select SOC_ESP32_PICO_D4
	select SOC_ESP32_PROCPU if BOARD_M5STACK_ATOM_ECHO_ESP32_PROCPU
	select SOC_ESP32_APPCPU if BOARD_M5STACK_ATOM_ECHO_ESP32_APPCPU
